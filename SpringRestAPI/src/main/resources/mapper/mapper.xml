<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sample.myapp.dao.PersonDAO">
	
	<select id="getPersons" 
	resultType="com.sample.myapp.dto.Person">
		SELECT * FROM person
	</select>
	
	<select id="getPerson" parameterType="int"
	resultType="com.sample.myapp.dto.Person">
		SELECT * FROM person WHERE id=#{id}
	</select>
	
	<insert id="insertPerson"
	parameterType="com.sample.myapp.dto.Person">
		INSERT INTO person (id, name, job) 
		VALUES (#{id}, #{name}, #{job})
	</insert>
	
</mapper>
